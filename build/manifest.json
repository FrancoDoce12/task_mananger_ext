{
    "manifest_version": 3,
    "name": "Hello Extensions of the world!",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
        "default_popup": "/action/action.html",
        "default_icon": "default_icon.png"
    },
    "permissions": [
        "storage",
        "notifications",
        "alarms",
        "tabs"
    ],
    "background": {
        "scripts": [
            "mainServiceWorker.js"
        ],
        "persistent": false
    }
}