{
    "manifest_version": 3,
    "name": "Task Manager with Notifications",
    "description": "Manage complex tasks and stay reminded with non-intrusive notifications",
    "version": "1.0",
    "action": {
        "default_popup": "/action/action.html",
        "default_icon": "logo_app.png"
    },
    "permissions": [
        "storage",
        "notifications",
        "alarms",
        "tabs"
    ],
    "background": {
        "service_worker": "/serviceWorkers/startUp.js",
        "type": "module"
    }
}